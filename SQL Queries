use paymentinfo;
CREATE TABLE customer(
customerid int PRIMARY KEY,
firstname varchar(50),
lastname varchar(50),
address varchar(100),
city varchar(100),
state varchar(2)
);

CREATE TABLE CREDIT_INFO(
card_number int PRIMARY KEY,
expiration_date int,
cvv int);

CREATE TABLE CUSTOMER_ORDER(
order_id int(7) PRIMARY KEY,
item_desicprtion varchar(250),
order_total int(10));

ALTER TABLE CUSTOMER
ADD email varchar(255);

SHOW TABLES;

